{
  "tests": [
    {
      "name": "OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "name": "POST with valid prompt",
      "method": "POST",
      "path": "/",
      "body": {
        "prompt": "A beautiful sunset over mountains"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "imageUrl": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "POST with empty prompt",
      "method": "POST",
      "path": "/",
      "body": {
        "prompt": ""
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Prompt is required"
      }
    }
  ]
}
